{
  "name": "frontend",
  "description": "My MariaDB Setup App",
  "author": "Your Name",
  "version": "0.1.0",
  "private": true,
  "main": "main/index.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "electron": "wait-on http://localhost:3000 && electron .",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.example.myapp",
    "productName": "My Setup App",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main/**/*",
      "out/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "../backend/backend.exe",
        "to": "extra/backend.exe"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "favicon.ico"

    },
    "nsis": {
      "oneClick": false
    }
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "electron-serve": "^3.0.0",
    "lucide-react": "^0.555.0",
    "next": "16.0.5",
    "next-themes": "^0.4.6",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "react-hook-form": "^7.67.0",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.4.0",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "babel-plugin-react-compiler": "1.0.0",
    "electron": "^39.2.4",
    "eslint": "^9",
    "eslint-config-next": "16.0.5",
    "tailwindcss": "^4",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5"
  }
}
